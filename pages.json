{
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    "pages": [
        {
            "path": "pages/index/index",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/shop/index",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/user/index",
            "style": {
                "enablePullDownRefresh": true
            }
        }
    ],
    "subPackages": [
        {
            "root": "view",
            "pages": [
                {
                    "path": "book/item",
                    "style": {
                        "navigationStyle": "default"
                    }
                },
                {
                    "path": "book/detail",
                    "style": {}
                },
                {
                    "path": "user/signIn",
                    "style": {}
                },
                {
                    "path": "user/setting/setting",
                    "style": {}
                },
                {
                    "path": "user/setting/message",
                    "style": {}
                },
                {
                    "path": "user/setting/pwd",
                    "style": {}
                }
            ]
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "云之书",
        "navigationBarBackgroundColor": "#fb739a",
        "backgroundColor": "#F8F8F8",
        "navigationStyle": "custom",
        "app-plus": {
            "pullToRefresh": {
                "color": "#fb739a"
            }
        }
    },
    "tabBar": {
        "color": "#757575",
        "selectedColor": "#fb739a",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/tabbar/book.png",
                "selectedIconPath": "static/tabbar/book_chosed.png",
                "text": "书架"
            },
            {
                "pagePath": "pages/shop/index",
                "iconPath": "static/tabbar/shopping.png",
                "selectedIconPath": "static/tabbar/shopping_chosed.png",
                "text": "书城"
            },
            {
                "pagePath": "pages/user/index",
                "iconPath": "static/tabbar/me.png",
                "selectedIconPath": "static/tabbar/me_chosed.png",
                "text": "我的"
            }
        ]
    }
}
